{
  "name": "@cryptr/cryptr-react",
  "version": "0.0.1",
  "private": false,
  "dependencies": {
    "@cryptr/cryptr-spa-js": "github:cryptr-auth/cryptr-spa-js#feature/debugging-worker",
    "axios": "^0.21.0",
    "npm-watch": "^0.9.0",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build:react": "react-scripts build",
    "build:serve:react": "react-scripts build && serve -s build",
    "watch": "npm-watch",
    "lint": "eslint --ext=tsx ./src",
    "eject": "react-scripts eject",
    "publish-force": "npm unpublish --force && npm run build && ls && npm publish",
    "build": "npm run lint && rm -rf dist && rollup -c --environment NODE_ENV:production",
    "publish:lib": "npm run build && npm publish",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "watch": {
    "build:serve:react": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx,ts,tsx"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/plugin-proposal-export-default-from": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@testing-library/react": "^11.1.1",
    "@testing-library/user-event": "^12.1.10",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-typescript-to-proptypes": "^1.4.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "microbundle-crl": "^0.13.11",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-intl": "^5.8.8",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "rollup": "^2.33.1",
    "rollup-plugin-analyzer": "^3.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "description": "Cryptr React Authentication SDK",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "cryptr",
    "react",
    "sdk",
    "authnetication",
    "passwordless"
  ],
  "author": "Cryptr (https://www.cryptr.co)",
  "license": "ISC"
}
